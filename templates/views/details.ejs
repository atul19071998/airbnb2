<body>
  <!-- navbar comes from partials file -->
  <%- include('../partials/navbar') %>
    <!-- booking section starts here -->
    <section class="booking">
      <!-- cards section starts here -->

      <div class="cards">
        <h2 class="px-5">
          <%=data.name%>
        </h2>
        <div class="booking-icon">
          <div class="booking-left">
            <b><span> <i class="fa-sharp fa-solid fa-star"></i>
                <a href="#"> 4.5 Reviews</a></span></b>
          </div>
          <div class="booking-right">
            <b><span> <i class="fa-solid fa-arrow-up-from-bracket"></i> <a href="#">Share </a> </span></b>
            <b><span> <i class="fa-regular fa-heart"></i> <a href="#"> Save</a></span></b>
          </div>
        </div>
      </div>
      <!-- imagegrid section starts here -->
      <p class="px-5"> <%=data.address.country%></p>
      <div class="imageGrid">
        <div class="item-1"> <img src="<%=data.images.picture_url%>" class="card-img-top" alt="..." /></div>
        <div class="item-2"> <img src="<%=data.images.picture_url%>" class="card-img-top" alt="..." /></div>
        <div class="item-3"> <img src="<%=data.images.picture_url%>" class="card-img-top" alt="..." /></div>
        <div class="item-4"> <img src="<%=data.images.picture_url%>" class="card-img-top" alt="..." /></div>
        <div class="item-5"> <img src="<%=data.images.picture_url%>" class="card-img-top" alt="..." /></div>
      </div>
      <!-- imagegrid section ends here -->
      <!-- about section starts here -->
      
      <div class="about">
        <div class="d-flex flex-column flex-sm-row justify-content-between py-2 my-4 border-bottom"></div>
        <span>
          <h2><i class="fa-solid fa-house-user"></i>   About Home</h2>
        </span>
        <p>
          <%=data.space%>
        </p>
        <span>
          <h5><i class="fa-solid fa-building-wheat"></i>  Home Type:</h5>
        </span>
        <p>
          <%=data.property_type%>
        </p>
        <span>
          <h5><i class="fa-solid fa-restroom"></i>   Room Type:</h5>
        </span>
        <p>
          <%=data.room_type%>
        </p>
        <span>
          <h5><i class="fa-solid fa-moon"></i>   Minimum Nights:</h5>
        </span>
        <p>
          <%=data.minimum_nights%>
        </p>
         
        <span><h5><i class="fa-sharp fa-solid fa-street-view"></i> Overview:</h5></span>
         
        <p>
          <%=data.neighborhood_overview%>
        </p>
        <span>
          <h5><i class="fa-solid fa-file"></i>  Policy</h5>
        </span>
        <p>
          <%=data.cancellation_policy%>
        </p>
      </div>
      <!-- about section ends here -->
      <!-- review section starts here -->
      <div class="d-flex flex-column flex-sm-row justify-content-between py-2 my-4 border-bottom"></div>
      <div class="review">
        <div class="review-left">
          <div class="review_logo">
            <img src="https://a0.muscache.com/im/pictures/f4a1e0fb-bd06-4f11-91e3-8d3979d3431a.jpg" alt="airbnb logo" />
          </div>

          <h4>What this place offers</h4>
          <div class="offers">
            <span>
              <p><i class="fa-solid fa-eye"></i>
                <%=data.amenities[7]%>
            </span></p>
            <span>
              <p><i class="fa-solid fa-kitchen-set"></i>
                <%=data.amenities[1]%>
            </span> </p>
            <span>
              <p><i class="fa-solid fa-briefcase"></i>
                <%=data.amenities[2]%>
            </span></p>
            <span>
              <p><i class="fa-sharp fa-solid fa-building"></i>
                <%=data.amenities[3]%>
            </span> </p>
            <span>
              <p><i class="fa-solid fa-wifi"></i>
                <%=data.amenities[0]%>
            </span> </p>
            <span>
              <p><i class="fa-solid fa-umbrella-beach"></i>
                <%=data.amenities[4]%>
            </span> </p>
            <span>
              <p><i class="fa-sharp fa-solid fa-dog"></i>
                <%=data.amenities[5]%><span>
              </p>
          </div>
        </div>
        <div class="review-right">
          <!-- booking form section starts here -->
          <div class="reserved">
            <form name="myForm"  action="">
              <h3>Reserve Your Home.</h3>
              <p>Total price :<b>‚Çπ1,<%=data.price%></b></p>

              <div class="form-group">
                <input class="form-control" type="date"  name="fname"  required>
                <span   class="form-label">Check In</span>
              </div>
              <div class="form-group">
                <input class="form-control" type="date"   required>
                <span value="0" class="form-label">Check out</span>
              </div>
              <div class="form-group">
                <select class="form-control"   required>
                  <option value="0" selected hidden>no of rooms</option>
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                </select>
                <span class="select-arrow"></span>
                <span class="form-label">Rooms</span>
              </div> 
              <div class="form-group">
                <select class="form-control" required>
                  <option value="0" selected hidden>no of adults</option>
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                </select>
                <span class="select-arrow"></span>
                <span class="form-label">Adults</span>
              </div>
              <div class="form-btn">
                <button class="submit-btn" type="submit" onclick="validateForm()" id="form-submit">Reserve</button>
              </div>
          </div>
        </form>

         





        </div>
      </div>
      <!-- booking form section ends here -->
